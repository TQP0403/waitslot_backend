{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@modules/(.*)": "<rootDir>/../src/modules/$1",
    "@helpers/(.*)": "<rootDir>/../src/helpers/$1",
    "@configs/(.*)": "<rootDir>/../src/configs/$1"
  }
}
